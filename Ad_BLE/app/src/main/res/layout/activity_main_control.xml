<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TableLayout
            android:id="@+id/layout_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/battery_low"></ImageView>

                    <TextView
                        android:id="@+id/tv_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="9999%"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/dashboard"></ImageView>

                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="333KM/H"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/snow_temp"></ImageView>

                    <TextView
                        android:id="@+id/tv_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="999℃"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/thunder_light"></ImageView>

                    <TextView
                        android:id="@+id/tv_power"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="9999W"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/addrive_back_bold" />

                    <TextView
                        android:id="@+id/tv_now_state"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="等待"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:src="@drawable/chart_pie_alt">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_modle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="运动模式"
                        android:textSize="18sp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_disable"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解除电机">
            </Button>

            <Button
                android:id="@+id/btn_model_sw"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="切换模式">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_seekbar"
            android:layout_alignBottom="@id/layout_table"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="-140dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="水平姿态">
                    </TextView>
                    <TextView
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="垂直姿态">
                    </TextView>
                    <TextView
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="基速度">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <SeekBar
                        android:id="@+id/sb_horizontal_angle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                    </SeekBar>
                    <SeekBar
                        android:id="@+id/sb_vertical_angle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                    </SeekBar>
                    <SeekBar
                        android:id="@+id/sb_base_speed"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                    </SeekBar>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_alignBottom="@id/layout_seekbar"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="-370dp">

            <LinearLayout
                android:id="@+id/layout_break"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-95dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_break_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动刹车">
                </Button>
                <Button
                    android:id="@+id/btn_break"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刹车">
                </Button>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_joystick_info"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/tv_joystick_layout"
                android:layout_alignBottom="@id/tv_joystick_layout"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="175dp"
                android:layout_marginBottom="-40dp"
                android:gravity="center"
                android:text="X:0 Y:0"
                android:textSize="25sp" />

            <RelativeLayout
                android:id="@+id/tv_joystick_layout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignBottom="@+id/layout_break"
                android:layout_alignEnd="@+id/layout_break"
                android:layout_marginBottom="-200dp"
                android:layout_marginEnd="20dp"
                >

                <ImageView
                    android:id="@+id/iv_joystick_background"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/joystick_background" />

                <ImageView
                    android:id="@+id/iv_joystick"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/mixueer" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>