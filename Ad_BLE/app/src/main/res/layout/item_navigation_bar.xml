<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="#e6e3e5">
    <Spinner
        android:id="@+id/s_go_toMain"
        android:layout_width="130dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button

            android:id="@+id/btn_connect_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_style"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_ad_connect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/addrive_back_bold"
                />
            <ImageView
                android:id="@+id/iv_connect1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/sort"
                android:rotation="90"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/iv_pad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/game_pad"
                />
            <ImageView
                android:id="@+id/iv_connect2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/sort"
                android:rotation="90"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/iv_bluetooth"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/bluetooth"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>